{
  "name": "mygento/module-smtp",
  "description": "Magento 2 SMTP",
  "type": "magento2-module",
  "license": "OSL-3.0",
  "authors": [{
    "name": "Nikita Tarasov",
    "email": "nikita@mygento.com"
  }],
  "keywords": [
    "magento",
    "magento2",
    "mygento"
  ],
  "require": {
    "magento/module-email": "~101.1.6"
  },
  "require-dev": {
    "mygento/coding-standard": "v2.4.x-dev"
  },
  "autoload": {
    "files": [
      "registration.php"
    ],
    "psr-4": {
      "Mygento\\Smtp\\": ""
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://repo.magento.com"
    }
  ],
  "config": {
    "allow-plugins": {
      "magento/composer-dependency-version-audit-plugin": false,
      "magento/magento-composer-installer": false,
      "phpro/grumphp": true
    }
  }
}
